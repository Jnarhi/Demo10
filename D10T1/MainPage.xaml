<Page
    x:Class="D10T1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:D10T1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <CheckBox x:Name="milkCheckBox" Content="Milk"/>
            <CheckBox x:Name="butterCheckBox" Content="Butter"/>
            <CheckBox x:Name="beerCheckBox" Content="Beer"/>
            <CheckBox x:Name="chickenCheckBox" Content="Chicken"/>
            <CheckBox x:Name="lemonadeCheckBox" Content="Lemonade"/>
            <Button x:Name="buyButton" Content="Buy" Click="buyButton_Click"/>
            <TextBlock Text="Shopping List:"/>
            <TextBox x:Name="shoppingBox" Height="100" Width="200" HorizontalAlignment="Left" SelectionHighlightColor="Black" Margin="0" Text=""/>

        </StackPanel>
    </Grid>
</Page>
